{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":gitSignOff",
    "group:all"
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "dependencyDashboard": false,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ],
  "assigneesFromCodeOwners": true,
  "assignAutomerge": true,
  "automerge": true,
  "automergeStrategy": "squash",
  "automergeType": "pr"
}
